function enviarEmailsDeVerdade() {
  var sheet = SpreadsheetApp.getActiveSpreadsheet().getSheets()[0]; // Primeira aba
  var data = sheet.getDataRange().getValues();
  var headers = data[0];

  var nomeIndex = headers.indexOf("UsuÃ¡rio - Nome");
  var emailIndex = headers.indexOf("UsuÃ¡rio - Email");
  var dataRealizacaoIndex = headers.indexOf("Data realizaÃ§ao"); // <- com Ã§ e sem til
  var horarioIndex = headers.indexOf("HorÃ¡rio");
  var enderecoIndex = headers.indexOf("EndereÃ§o");
  var enviadoIndex = headers.indexOf("Enviado");

  if (enviadoIndex === -1) {
    sheet.getRange(1, headers.length + 1).setValue("Enviado");
    enviadoIndex = headers.length;
  }

  var enviadosHoje = 0;

  for (var i = 1; i < data.length; i++) {
    var nome = data[i][nomeIndex];
    var email = data[i][emailIndex];
    var dataRealizacao = data[i][dataRealizacaoIndex];
    var horario = data[i][horarioIndex];
    var endereco = data[i][enderecoIndex];
    var jaEnviado = data[i][enviadoIndex];

    if (email && jaEnviado !== "SIM") {
      var mensagem = `
        OlÃ¡, ${nome}!<br><br>
        Tudo bem com vocÃª?<br><br>
        VocÃª se inscreveu na <strong>Academia de FinanÃ§as</strong> este ano e, por isso, lhe convidamos novamente!<br>
        A prÃ³xima ediÃ§Ã£o jÃ¡ estÃ¡ com as inscriÃ§Ãµes abertas:<br><br>
        ğŸ“… <strong>Data:</strong> ${dataRealizacao}<br>
        ğŸ•’ <strong>HorÃ¡rio:</strong> ${horario}<br>
        ğŸ“ <strong>Local:</strong> ${endereco}<br><br>

        <strong>Para se inscrever:</strong><br>
        1ï¸âƒ£ Acesse o portal: <a href="https://app.adesampa.com.br">app.adesampa.com.br</a><br>
        2ï¸âƒ£ No menu, filtre pelo projeto <strong>"Academia de FinanÃ§as"</strong><br>
        3ï¸âƒ£ Escolha a unidade TEIA e o horÃ¡rio ideais para vocÃª<br><br>

        A Academia de FinanÃ§as Ã© uma clÃ­nica financeira gratuita, ou seja, vocÃª nÃ£o paga para participar. 
        Nela, vocÃª vai aprender sobre planejamento financeiro eficiente e saudÃ¡vel, boas prÃ¡ticas para pequenos negÃ³cios e gestÃ£o financeira para aumentar a competitividade. 
        Os atendimentos sÃ£o personalizados para que vocÃª possa aplicar estratÃ©gias especÃ­ficas ao seu negÃ³cio.<br><br>

        Esperamos vocÃª lÃ¡!<br><br>
        Atenciosamente,<br>
        <strong>Equipe ADE SAMPA | Academia de FinanÃ§as</strong>
      `;

      MailApp.sendEmail({
        to: email,
        subject: "Convite: Academia de FinanÃ§as",
        htmlBody: mensagem
      });

      sheet.getRange(i + 1, enviadoIndex + 1).setValue("SIM");
      Logger.log("Enviado para: " + nome + " - " + email);
      enviadosHoje++;
    }
  }

  Logger.log("Total de e-mails enviados: " + enviadosHoje);
}
